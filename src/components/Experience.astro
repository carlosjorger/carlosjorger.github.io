---
import SectionContainer from './shared/SectionContainer.astro';
import Subtitle from './shared/Subtitle.astro';

export interface Props {
	HEADER_EXPERIENCE: string;
	EXPERIENCE: Experience[];
}

type Experience = {
	date: String;
	ocupation: String;
	description: String;
	logoFile: string;
};
const { HEADER_EXPERIENCE, EXPERIENCE } = Astro.props;
---

<SectionContainer id="experience">
	<header class="reveal my-6 mb-2 pt-2">
		<Subtitle left>{HEADER_EXPERIENCE}</Subtitle>
	</header>
	<ol
		class="reveal-experience relative mx-[1.33rem] mt-8 border-s border-teal-200"
	>
		{
			EXPERIENCE.map((job) => (
				<li class=" mb-20 ms-8">
					<div class="flex flex-row items-center">
						<div class="absolute start-[-0.9rem] mb-1 w-7 overflow-hidden rounded-full border border-teal-200 bg-slate-300 shadow-lg shadow-teal-200">
							<img class="aspect-square" src={`/images/${job.logoFile}`} alt="" />
						</div>
						<h3 class="reveal-experience-info my-0.5 text-xl font-semibold text-teal-200">
							{job.ocupation}
						</h3>
					</div>
					<time class="mb-1 text-base font-normal leading-none text-[var(--default-font-color3)]">
						{job.date}
					</time>

					<p class="reveal-experience-info mb-2.5 mt-2.5 text-lg font-normal text-[var(--default-font-color)]">
						{job.description}
					</p>
				</li>
			))
		}
	</ol>
</SectionContainer>
